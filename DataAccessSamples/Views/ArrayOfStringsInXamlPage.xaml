<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataAccessSamples.Views.ArrayOfStringsInXamlPage"
             Title="Example: LV/Static1: Fruit">
     <StackLayout Margin="0,20,0,0">
         <Label Text="The following is a listview that includes an array of strings hardcoded in the Xaml"
                Margin="10,20"/>
         <Label Text="Layout: Default"
                Margin="10,20"
                FontSize="Micro"/>
        <ListView>
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Apple</x:String>
                    <x:String>Blueberry</x:String>
                    <x:String>Cantaloupe</x:String>
                    <x:String>Banana</x:String>
                    <x:String>Orange</x:String>
                 </x:Array>
            </ListView.ItemsSource>
        </ListView>
    </StackLayout>
</ContentPage>
